# Flask config
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=replace_with_a_real_secret_key

# Database (MySQL)
DB_HOST=db
DB_PORT=3306
DB_USER=school_admin
DB_PASSWORD=school_password
DB_NAME=school_timetable

# App settings
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123        # change in production
DEFAULT_SCHOOL_NAME=My School

# Scheduler tuning (optional)
SCHEDULER_MAX_ITER=10000
SCHEDULER_TIMEOUT_SECONDS=30

# Docker-specific
USE_DOCKER=true
